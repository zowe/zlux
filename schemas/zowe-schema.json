{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://zowe.org/schema/app-server",
  "allOf": [
    { "$ref": "/schema/base#" },
    { "type": "object",
      "properties": {
        "components": {
          "type": "object",
          "properties": {
            "additionalProperties": true,
            "app-server": {
              "allOf": [
                { "$ref": "/schema/base#component" },                
                { "$ref": "/schema/app-server-config#"}
              ]
            }
          }
        }
      }
    }
  ]
}
